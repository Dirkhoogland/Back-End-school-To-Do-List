@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}
<div class="center-container">

    <div class = "Dataview">
        <button onclick = "Insertshow()"   id = "Insertbutton"  >Insert</button>
        <div>
            @using (Html.BeginForm("OnPost", "IndexModel",FormMethod.Post ))
            {
                
                <div id="Inputlijst">
                <p >Lijst naam</p>
                @Html.TextBoxFor(m => m.Lijst)
                <p><input type="submit" value="SubmitLijst" name="Testlijst" runat = "server" id = "Insertsub"/>Add</p>

                </div>
            }
        </div>
    </div>



    <div class = "Inputuserinsert">

        <div id = "Inputuserinserttext">
     @using (Html.BeginForm("OnPost", "IndexModel",FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Planning details toevoeggen</th>
            </tr>
            <tr>
                <td>Taak</td>
                <td>
                    @Html.TextBoxFor(m => m.Naaminput)
                </td>
            </tr>
                <tr>
                <td>Lijst</td>
                <td>
                    @Html.TextBoxFor(m => m.Lijstinput)
                </td>
            </tr>
            <tr>
                <td>Beschrijving </td>
                <td>
                    @Html.TextBoxFor(m => m.Beschrijvinginput)
                </td>
            </tr>
            <tr>
                <td>Status </td>
                <td>
                    @Html.DropDownListFor(m => m.Statusinput, new List<SelectListItem>
                   { new SelectListItem{Text="Klaar", Value="Klaar"},
                     new SelectListItem{Text="Bezig", Value="Bezig"}}, "select")
                </td>
            </tr>
            <tr>
                <td>Duur</td>
                <td>
                    @Html.TextBoxFor(m => m.Duurinput)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="SubmitInsert" runat = "server" id = "Insertsub" /></td>
               
            </tr>
        </table>
        }
        </div>
      </div>
      <div>
        
    @{

        foreach(var lijst in @Model.Lijsten)
        {  <p>Lijst naam @{@lijst.NaamLijst}</p>
            foreach (var taak in lijst.Tasks)
            {
             <p>Taak @{@taak.Naam}</p>
             <input type = "text" id = "Inputupdatetnaam">
             <p>Beschrijving@{@taak.Beschrijving}</p>
             <input type = "text" id = "Inputupdatetbesch">
             <p>Duur = @{@taak.Duur}</p>
             <input type = "text" id = "Inputupdatetduur">
             <p>Status @{@taak.Status}</p>
             <input type = "text" id = "Inputupdatetstatus" >
             <input id="updatebutton" value="Update" type = "button" onclick="updatestart()" >
             <input id="confirmbutton" value="confirm" type = "button" onclick="confirmupdate(@taak.Id,Inputupdatetsnaam,Inputupdatetstatus,Inputupdatetduur,Inputupdatetbesch)" >
             <input id="Deletebutton" value="Delete" type = "button" onclick="startDelete(@taak.Id)" >  
            }
            }
            }
        </div>
    </div>
    





