@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="center-container">

    <div class = "Dataview">
        
        <datalist>



        </datalist>

    </div>



    <div class = "Input-user">
            @using (Html.BeginForm("OnPost", "IndexModel", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Planning details</th>
            </tr>
            <tr>
                <td>Naam: </td>
                <td>
                    @Html.TextBoxFor(m => m.Naaminput)
                </td>
            </tr>
            <tr>
                <td>Beschrijving </td>
                <td>
                    @Html.TextBoxFor(m => m.Beschrijvinginput)
                </td>
            </tr>
            <tr>
                <td>Status </td>
                <td>
                    @Html.DropDownListFor(m => m.Statusinput, new List<SelectListItem>
                   { new SelectListItem{Text="Klaar", Value="Klaar"},
                     new SelectListItem{Text="Bezig", Value="Bezig"}}, "select")
                </td>
            </tr>
            <tr>
                <td>Duur</td>
                <td>
                    @Html.TextBoxFor(m => m.Duurinput)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
    }
        
    </div>

</div>
